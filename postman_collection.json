{
  "info": {
    "name": "Menu Link API",
    "_postman_id": "menu-link-api-collection",
    "description": "Collection Postman pour l'API Menu Link - Gestion de restaurant avec menu digital",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://menu-link-api.onrender.com/api",
      "type": "string"
    },
    {
      "key": "session_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "Check Server Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/health",
              "host": ["{{base_url}}"],
              "path": ["health"]
            },
            "description": "Vérifie si le serveur est en ligne et fonctionnel"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Sessions",
      "item": [
        {
          "name": "Create Session (Scan QR)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('session_id', response.data.session_id);",
                  "    pm.test('Session created successfully', function() {",
                  "        pm.expect(response.success).to.be.true;",
                  "        pm.expect(response.data.session_id).to.exist;",
                  "    });",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"qr_code\": \"table_1_1706256600000\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/sessions",
              "host": ["{{base_url}}"],
              "path": ["sessions"]
            },
            "description": "Crée une nouvelle session client après le scan d'un QR code"
          },
          "response": []
        },
        {
          "name": "Validate Session",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/sessions/{{session_id}}",
              "host": ["{{base_url}}"],
              "path": ["sessions", "{{session_id}}"]
            },
            "description": "Vérifie si une session est toujours valide"
          },
          "response": []
        },
        {
          "name": "End Session",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/sessions/{{session_id}}",
              "host": ["{{base_url}}"],
              "path": ["sessions", "{{session_id}}"]
            },
            "description": "Termine une session client"
          },
          "response": []
        }
      ]
    },
    {
      "name": "Menu",
      "item": [
        {
          "name": "Get Complete Menu",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/menu",
              "host": ["{{base_url}}"],
              "path": ["menu"]
            },
            "description": "Récupère le menu complet avec toutes les catégories et plats disponibles"
          },
          "response": []
        },
        {
          "name": "Get Menu by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/menus/:id",
              "host": ["{{base_url}}"],
              "path": ["menus", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "507f1f77bcf86cd799439011"
                }
              ]
            },
            "description": "Récupère un menu spécifique par son ID"
          },
          "response": []
        },
        {
          "name": "Create Menu",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nom\": \"Menu du Jour\",\n  \"gestionnaire_id\": \"507f1f77bcf86cd799439010\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/menus",
              "host": ["{{base_url}}"],
              "path": ["menus"]
            },
            "description": "Crée un nouveau menu"
          },
          "response": []
        },
        {
          "name": "Update Menu",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nom\": \"Menu Spécial\",\n  \"actif\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/menus/:id",
              "host": ["{{base_url}}"],
              "path": ["menus", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "507f1f77bcf86cd799439011"
                }
              ]
            },
            "description": "Met à jour un menu existant"
          },
          "response": []
        },
        {
          "name": "Delete Menu",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/menus/:id",
              "host": ["{{base_url}}"],
              "path": ["menus", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "507f1f77bcf86cd799439011"
                }
              ]
            },
            "description": "Supprime un menu"
          },
          "response": []
        }
      ]
    }
  ]
}
